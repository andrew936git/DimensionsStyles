<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:layout_marginTop">@dimen/margin_top_large</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="SubTitleTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:layout_marginTop">@dimen/margin_top_large</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="OrdinaryTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/ordinary_text_size</item>
        <item name="android:layout_margin">@dimen/margin_all_side</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyEditTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:textColorHint">@color/sky_blue</item>
        <item name="android:textColor">@color/blue</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:layout_margin">@dimen/margin_all_side</item>
    </style>

    <style name="MyButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/margin_top_large</item>
    </style>
</resources>